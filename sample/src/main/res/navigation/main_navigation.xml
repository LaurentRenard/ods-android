    <fragment
        android:id="@+id/navigation_text_field_filled"
        android:name="com.orange.ods.sample.textfield.TextFieldFilledFragment"
        android:label="@string/textfield_filled_title"
        tools:layout="@layout/fragment_textfield" />

    <fragment
        android:id="@+id/navigation_text_field_outlined"
        android:name="com.orange.ods.sample.textfield.TextFieldOutlinedFragment"
        android:label="@string/textfield_outlined_title"
        tools:layout="@layout/fragment_textfield" />

    <fragment
        android:id="@+id/navigation_tab"
        android:name="com.orange.ods.sample.tab.TabFragment"
        android:label="@string/tab_title"
        tools:layout="@layout/fragment_tab" />

    <fragment
        android:id="@+id/navigation_progress"
        android:name="com.orange.ods.sample.progress.ProgressFragment"
        android:label="@string/progress_title"
        tools:layout="@layout/fragment_progress" />

    <fragment
        android:id="@+id/navigation_snackbar"
        android:name="com.orange.ods.sample.snackbar.SnackbarFragment"
        android:label="@string/snackbar_title"
        tools:layout="@layout/fragment_snackbar" />

    <fragment
        android:id="@+id/navigation_card"
        android:name="com.orange.ods.sample.card.CardFragment"
        android:label="@string/card_title"
        tools:layout="@layout/fragment_card" />


</navigation>