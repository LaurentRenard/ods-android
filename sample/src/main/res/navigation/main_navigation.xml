        android:id="@+id/navigation_fab"
        android:name="com.orange.ods.sample.fab.FabFragment"
        android:label="@string/fab_title"
        tools:layout="@layout/fragment_fab" />

    <fragment
        android:id="@+id/navigation_fab_mini"
        android:name="com.orange.ods.sample.fab.FabMiniFragment"
        android:label="@string/fab_mini_title"
        tools:layout="@layout/fragment_fab_mini" />

    <fragment
        android:id="@+id/navigation_fab_extended"
        android:name="com.orange.ods.sample.fab.FabExtendedFragment"
