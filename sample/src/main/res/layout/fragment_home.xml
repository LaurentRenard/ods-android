<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Orange.Button.Outlined"
            android:text="@string/home_to_text_button" />

        <Button
            android:id="@+id/outlined_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Orange.Button.Outlined"
            android:text="@string/home_to_outlined_button" />

        <Button
            android:id="@+id/contained_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Orange.Button.Outlined"
            android:text="@string/home_to_contained_button" />

        <Button
            android:id="@+id/typography"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Orange.Button.Outlined"
            android:text="@string/home_to_typography" />
    </LinearLayout>


</layout>