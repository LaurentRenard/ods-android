<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="text"
            type="String" />

        <variable
            name="enabled"
            type="Boolean" />

        <variable
            name="icon"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="style"
            type="com.orange.ods.compose.component.button.OdsButtonStyle" />

        <variable
            name="displaySurface"
            type="com.orange.ods.compose.theme.OdsDisplaySurface" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.orange.ods.xml.component.button.OdsButton
            android:id="@+id/ods_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:icon="@{icon}"
            app:text="@{text}"
            app:enabled="@{enabled}"
            app:style="@{style}"
            app:displaySurface="@{displaySurface}" />

        <!-- Invisible OdsButton used for tests -->
        <com.orange.ods.xml.component.button.OdsButton
            android:id="@+id/ods_button_test"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:icon="@drawable/ic_add"
            app:text="Button"
            app:enabled="true"
            app:style="functional_positive"
            app:displaySurface="standard" />

    </FrameLayout>

</layout>